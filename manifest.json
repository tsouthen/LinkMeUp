{
  "manifest_version": 3,
  "name": "LinkMeUp",
  "version": "1.0.0",
  "description": "Create and copy links from the current tab as HTML, Markdown, or Plain text.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "LinkMeUp"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "commands": {
    "copy-markdown": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Copy link as Markdown"
    },
    "copy-html": {
      "description": "Copy link as HTML"
    },
    "copy-text": {
      "description": "Copy link as text"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "copyToClipboard.js"
      ]
    }
  ]
}